{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "UI/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "UI/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/UI/dist/$1" }
  ]
}